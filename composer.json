{
  "name": "pendenga/file",
  "description": "File tools",
  "minimum-stability": "beta",
  "license": "none",
  "authors": [
    {
      "name": "Grant Anderson",
      "email": "pendenga@gmail.com"
    }
  ],
  "config": {
    "platform": {
      "php": "7.3.11",
      "ext-json": "1.5.0",
      "ext-zip": "1.15.2"
    }
  },
  "require": {
    "box/spout": "^3.1",
    "ext-zip": "*",
    "psr/log": "^1.1",
    "ext-json": "*"
  },
  "require-dev": {
    "pendenga/log": "^0.1.0",
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "Pendenga\\File\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pendenga\\File\\Test\\": "test/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-qc": "phpunit --coverage-text",
    "test-coverage": "phpunit --coverage-html=build/coverage"
  }
}
